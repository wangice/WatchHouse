<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns="http://www.springframework.org/schema/beans"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
  <!--Store相关SpringBean类,配置文件-->
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <array>
        <!--application.properties必须在ignite-cache-config.properties之后，是因为单元测试中必须关闭igntie的通读通写配置(ignite.cache.through)，否则测试连接数据库将异常-->
        <value>classpath:application.properties</value>
        <!--单纯基于XML启动所需配置文件-->
        <value>classpath:application-junit.properties</value>
      </array>
    </property>
  </bean>
  <!--Store相关SpringBean类,注解管理Bean-->
  <context:component-scan base-package="com.ice.brother.house.app.provider.mapper"></context:component-scan>
  <context:annotation-config/>
</beans>